# Magna AI Agent Environment Variables

# Database Configuration
# For development, you can use SQLite or PostgreSQL
# SQLite (simpler for development):
DATABASE_URL=sqlite:///./magna_ai.db
# PostgreSQL (production-ready):
# DATABASE_URL=postgresql://user:password@localhost:5432/magna_ai_db

# LLM API Keys
GEMINI_API_KEY=your_gemini_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
NVIDIA_NIM_API_KEY=your_nvidia_nim_api_key_here
NVIDIA_NIM_MODEL=meta/llama-3.1-8b-instruct

# Security Keys (CHANGE THESE IN PRODUCTION!)
JWT_SECRET=your_jwt_secret_key_change_in_production
ENCRYPTION_KEY=your_32_character_encryption_key_here

# Optional Services
SERPAPI_API_KEY=your_serpapi_key_here
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
PINECONE_API_KEY=your_pinecone_key_here

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
environment=development

# Feature Flags
ENABLE_LOCAL_MODELS=false
ENABLE_MEMORY_SYNC=true
ENABLE_ANALYTICS=true
